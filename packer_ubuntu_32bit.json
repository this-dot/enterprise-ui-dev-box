{
	"builders": [{
		"type": "virtualbox-iso",
		"guest_os_type": "Ubuntu",
		"iso_url": "{{user `mirror`}}/16.04/ubuntu-16.04.3-server-i386.iso",
		"iso_checksum": "{{user `iso_checksum`}}",
		"iso_checksum_type": "{{user `iso_checksum_type`}}",
		"output_directory": "{{build_type}}-32",
		"vm_name": "frontend-dev-box-32",
		"disk_size": "{{user `disk_size`}}",
		"headless": "{{user `headless`}}",
		"http_directory": "http",
		"boot_wait": "5s",
		"boot_command": [
			"<enter><wait>",
			"<f6><esc>",
			"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
			"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
			"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
			"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
			"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
			"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
			"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
			"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
			"<bs><bs><bs>",
			"/install/vmlinuz ",
			"initrd=/install/initrd.gz ",
			"net.ifnames=0 ",
			"auto-install/enable=true ",
			"debconf/priority=critical ",
			"preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-16.04/preseed.cfg ",
			"<enter>"
		],
		"ssh_timeout": "{{user `ssh_timeout`}}",
		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"shutdown_command": "sudo systemctl poweroff",
		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
			["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
		]
	}],
	"provisioners": [{
		"type": "shell",
		"scripts": [
			"scripts/ubuntu/apt.sh",
			"scripts/common/sshd.sh",
			"scripts/common/zsh.sh",
			"scripts/common/utils.sh",
			"scripts/common/vagrant.sh",
			"scripts/common/nvm.sh",      
			"scripts/common/watchman.sh",
			"scripts/ubuntu/cleanup.sh",
			"scripts/common/minimize.sh"
	]
	}],
	"variables": {
		"compression_level": "6",
		"cpus": "2",
		"disk_size": "160000",
		"headless": "true",
		"iso_checksum": "2e763f7f3546be33ebc9a59311b2eee3b0b0c8e021fae65431c219b531d26d32",
		"iso_checksum_type": "sha256",
		"memory": "2650",
		"mirror": "http://releases.ubuntu.com",
		"ssh_timeout": "60m"
	}
}
